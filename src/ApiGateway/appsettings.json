{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/auth" },
          { "PathPrefix": "/api/auth" }
        ]
      },
      "missions-route": {
        "ClusterId": "mission-management-cluster",
        "Match": {
          "Path": "/api/missions/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/missions" },
          { "PathPrefix": "/api/missions" }
        ]
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity-api": {
            "Address": "http://localhost:5200"
          }
        }
      },
      "mission-management-cluster": {
        "Destinations": {
          "mission-management-api": {
            "Address": "http://localhost:5150"
          }
        }
      }
    }
  }
}
